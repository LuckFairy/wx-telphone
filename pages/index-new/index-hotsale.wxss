.rush-baobao-list{display:block;margin-top:16rpx;background:#ececec}
.rush-baobao-box{display:flex;background:#ececec;justify-content:space-between;flex-wrap:wrap}
.rush-baobao-image{display:inline-block;margin-bottom:16rpx;height:560rpx;background:#fff}
.rush-bobao-child{display:block;width:368rpx;height:368rpx}
.rush-baobao-text{display:block;padding-bottom:22rpx;width:368rpx;font-size:0rpx}
.rush-boabao-title{display:-webkit-box;overflow:hidden;margin-top:16rpx;padding:0rpx 24rpx;color:#1b1b1b;text-overflow:ellipsis;font-size:24rpx;-webkit-box-orient:vertical;-webkit-line-clamp:1}
.rush-boabao-reduce{display:inline-block;margin-top:22rpx;margin-left:24rpx;padding:2rpx 5rpx;border:1rpx solid #ff3030;border-radius:5rpx;color:#ff3030;font-size:22rpx}
.rush-baobao-price{display:flex;margin:0 24rpx;margin-top:18rpx;font-size:0rpx;justify-content:space-between;align-items:baseline}
.rush-baobao-curr-father{display:inline-block;font-size:0rpx}
.rush-baobao-cn{color:#ff3030;font-size:24rpx}
.rush-bobao-current{color:#ff3030;font-size:36rpx}
.rush-baobao-yet{color:#a9a9a9;text-decoration:line-through;font-size:24rpx}
.rush-baobao-sell{color:#999;font-size:20rpx}
