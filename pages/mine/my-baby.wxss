.container {
  flex-wrap: wrap;
  padding: 24rpx;
  min-height: 100vh;
  background-color: #f2f2f2;
  justify-content: space-between;
  align-items: flex-start;
  align-content: flex-start;
}

.cell-item {
  width: 339rpx;
  height: 390rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  background-size: 100% 100%;
  justify-content: space-between;
}
.cell-item-name {
  color: #fff;
  margin-top: 30rpx;
  text-align: center;
}
.cell-item-body {
  flex-direction: column;
  align-items: center;
}
.cell-item-body-section {
  margin-bottom: 24rpx;
}
.cell-item-footer {
  width: 100%;
  text-align: center;
  font-weight: 500;
  padding: 24rpx 0;
  border-top-width: 1px;
  border-bottom-width: 0;
}

.cell-item.add {
  justify-content: center;
  align-items: center;
}