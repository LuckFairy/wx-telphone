/* pages/saoma/saoma-index.wxss */
@import "../cart/cart.wxss";
.carts-footer{
  background: #fff;
  justify-content: flex-end;
  z-index:999;
}
.overlay-map{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color:rgba(10, 10, 10, 0.3);
  z-index:999;
}
.overlay-content{
   /* position: absolute; */
  z-index: 100000;
}


.overlay-image{
  width: 100%;
  height: 100%;
  position: absolute; 
  z-index: 100000;
}


.carts-item-top{
  margin-top: 20rpx;
}

.shop-total{
  width: 515rpx;
  height: 164rpx;
  margin-left:25rpx; 
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-top{
  display: flex;
  justify-content: space-between;
}

.shop-title{
  width: 451rpx;
  font-size: 28rpx;
  color: #1b1b1b;
}

.shop-image{
  width: 164rpx;
  height: 164rpx;
}

.gray{
  background-color: #eee !important;
}
.yellow{
  background: #ffe546 !important;
}

.line{
  width: 750rpx;
  height: 20rpx;
  background: #eee
}
.shop-area{
  height: 88rpx;
  width: 100%;
  display: flex;
  line-height: 88rpx;
  font-size: 28rpx;
  color:inherit;
  justify-content: space-between;
  align-items: center;
}
.shop-area view{
  align-items: center;
}
.shop-area .address-image{
  width: 30rpx;
  height: 40rpx;
  margin-right: 20rpx;
  margin-left: 24rpx;
}
.shop-area .address-go-image{
  width: 15rpx;
  height: 27rpx;
  margin-right: 24rpx;
}
.pp-null{
  width: 240rpx;
  height: 240rpx;
  padding-top: 0;
  margin-top: 200rpx;
}
.pp-text{
  color: inherit;
  padding-top: 60rpx;
}
.pp-goindex{
  margin-top: 40rpx;
  padding: 20rpx 48rpx;
  background:none;
  color: #ff7e12;
  border: 1px solid #ff7e12;
  border-radius: 10rpx;
  width: 280rpx;
  line-height: inherit;
}
.total-choose{
  position: absolute;
  left: 24rpx;
  bottom: 14rpx;
  height: auto;
}
.cart-img-list{
  width: 140rpx;
  height: 140rpx;
  
}

.cart-del-list{
  width: 40rpx;
  height: 40rpx;
  /* z-index: 999999; */
}
.total-price .total-pri-text{
  text-align: right;
  color: inherit;
}
.carts-footer .button{
  width: 240rpx;
  color: #fff;
  background: #d2d2d2;
}
.discount {
  background: #fff;
  display: flex;
  width: 750rpx;
  height: 88rpx;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
}
.discount-imglist{
  flex: 1;
}
.discount-img1:first-child{
  margin-left: 34rpx;
}
.discount-img1{
  display: inline-block;
  color: #ff3030;
  font-size: 28rpx;
  width: 134rpx;
  height: 46rpx;
  padding:0 26rpx 0 28rpx;
  line-height: 46rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url("data:image/png;base64,");
}
/*输入弹窗  */
.overlay-content{
  width: 620rpx;
}
.overlay-input{
  width:540rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #eee;
  border-radius: 10rpx;
  margin:50rpx 0 0;
}
.btn-yellow{
  width: 540rpx;
  margin-top: 30rpx;
  font-weight: bold;
}