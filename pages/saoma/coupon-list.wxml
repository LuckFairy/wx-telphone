<!--pages/saoma/coupon-list.wxml-->
<!-- 商品优惠券区域  is_get 是否可以领取 1可以领取 0不可以领取 -->
<block wx:if="{{coupon_value.length > 0}}">
  <view class='discount-area'>
    
    <!--优惠券列表  -->

    <view  class='discount-list' wx:for="{{coupon_value}}" >
      <view class='discount-left'>
        <view class='discount-img2'>￥{{item.face_money}}</view>
        <view class='discount-list-text'>
          <text class='discount-name'>{{item.name}}</text>
          <text class='discount-time'>有效期：{{item.end_time}}</text>
        </view>
      </view>
      <text wx:if="{{item.is_get == 1}}" class='discount-btn' catchtap='getCoupon' data-coupon-id="{{item.id}}" data-index="{{index}}">立即领取</text>
      <text wx:if="{{item.is_get == 0}}" class='discount-btn-no'>已领取</text>
    </view>
  </view>
</block>
<block wx:else>
  <view class='no-data'>
    <image src='../../image/no-data.png'></image>
    <view class='no-data-txt'>暂无内容</view>
  </view>
</block>
<!-- 商品优惠券区域结束  -->