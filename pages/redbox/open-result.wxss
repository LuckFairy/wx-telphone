/* pages/redbox/open-result.wxss */

page{
    background-color: #FFE546;
}

.containner{
    flex-direction: column; align-items: center;height: 100%;
}
.redbox-view{
    width:750rpx;
    flex-direction: column;
    align-items: center;
    margin-top:40px;
    position:relative;
}

.redbox-cover-view{
    position: absolute;
    left: 0px;top:0px;width: 100%;
    flex-direction: column;
    align-items: center;
    height: 100%;
}

.head-img{width:90rpx;height: 90rpx; border-radius: 50%;position: absolute;bottom:-65rpx;left:50%;transform: translateX(-50%)}

.view-1{flex:1;flex-direction:column;justify-content: center;align-items: center; position: relative;}
.view-2{flex:1;}
.view-3{flex:1;flex-direction:column;justify-content: center;align-items: center;width:400rpx;}

.bottom-view{
    flex-direction: column; justify-content: center;align-items: center;flex:1;
}


.btn{
    border-style: solid;
    border-width: 1px;
    border-color: #000;
    padding: 8px 40rpx;
    color:#000;
    font-size:30rpx;
    border-radius: 5rpx;
    width: 100%;
    text-align: center;
}