}

/*  --------------------赠品领用-------------------- */
.trial-containner{
    flex-direction: column; align-items: center;width: 750rpx;
}

.trial-goods-item-view{flex-direction: column;width:700rpx; align-items: center; margin-top:10px;}

.trial-cover-img-view{width:600rpx; position: relative;}
.trial-cover-img{width:100%;}
.trial-applied-tag-view{position:absolute;top:50%;left:50%;transform: translate(-50%, -50%);background-color:rgba(0,0,0,0.3);
    font-size:20rpx;color:white;border-radius:50%;width:100rpx;height:100rpx;justify-content:center;align-items:center;}

.trial-goods-name-view{font-size:30rpx;width:100%;margin-top:10px;}
.trial-price-info-view{flex-direction: row; justify-content: space-between; width:100%;margin-top:10px; color: #F15C63;
        border-bottom: 1px solid #F4F4F4; padding-bottom: 20rpx;}
.trial-price-view{flex-direction: row;line-height: 100%;}
.trial-invt-view{flex-direction: row;line-height: 100%;}

.trial-tip-view{
    width:500rpx;background-color:white;flex-direction:column;justify-content:center;align-items:center;border-radius:5px;
}
.trial-tip-text-view{font-size:25rpx;margin-top:20px;margin-bottom:20px;}