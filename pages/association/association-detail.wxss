page{
	background-color: #f2f2f2;
	min-height: 100vh;
}

.container {
	flex-direction: column;
	background-color: #fff;
}

.titleImage {
	width: 750rpx;
}

.body-wrap {
	flex-direction: column;
	padding: 24rpx;
}

.info {
	align-items: flex-end;
	justify-content: space-between;
	margin: 10rpx 0 20rpx;
}

.introduce{
	line-height: 130%;
}

.numsOfPeople {
  align-self: flex-start;
  padding: 6rpx 16rpx; 
  color: #fff;
}

.weixin {
	margin-top: 50rpx;
	flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.addWeixinButton {
	margin-top: 24rpx;
	margin-bottom: 40rpx;
  border: 1px solid rgb(250, 30, 30);
  padding: 13rpx 30rpx;
  border-radius: 8rpx;
}