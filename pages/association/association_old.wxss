page {
	background-color: #f2f2f2;
}

.wrap {
  padding: 20rpx 24rpx 0;
  display: block;
}

.container {
  flex-direction: column;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.titleImage {
  /*justify-content: flex-end;
  flex-direction: column;*/
}

.titleImage .image {
  width: 100%;
  position: relative;
}

.titleImage .title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 10rpx;
  background-color: rgba(10,10,10, 0.4);
  color: #fff;
  font-size: 13pt;
}

.info {
  flex-direction: column;
  color: #333;
}

.introduce {
  line-height: 140%;
  padding: 16rpx 0;
}

.groupInfo {
  align-self: flex-end;
  align-items: center;
  padding-bottom: 14rpx;
}

.groupInfo .image {
  width: 36rpx;
  margin-right: 8rpx;
}

.weixin {
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 2rpx;
}

.weixin .weixinNum {
  margin: 0 22rpx 0 6rpx;
  font-weight: 600;
}