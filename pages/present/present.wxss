.container, page {
  z-index: 10;
}

.container {
  margin-bottom: 20rpx;
  padding: 30rpx 24rpx;
  width: 100%;
  background-color: #fff;
}

.modelImage {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.modelRightContainer {
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
}

.description {
  flex-direction: column;
}

.title {
  font-weight: 500;
  font-size: 28rpx;
  color: #1b1b1b;
  text-align: left;
}

.subTitle {
  font-size: 10pt;
}

.info {
  flex-direction: column;
}

.priceInfo {
  margin-top: 30rpx;
  align-items: flex-end;
}

.special {
  font-size: 44rpx;
  font-weight: 700;
  align-items: flex-end;
  color: #ff3030;
}

.price {
  margin-left: 14rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  vertical-align: bottom;
}

.controlWrap {
  justify-content: space-between;
  align-items: center;
}

.badgeWrap {
  font-size: 24rpx;
  width: 140rpx;
  height: 40rpx;
  border: solid 1rpx #f49595;
  background-color: rgba(240, 50, 50, 0.1);
  border-radius: 24rpx;
  align-items: center;
  justify-content: center;
  margin-right: 14rpx;
}

.getButton {
  width: 162rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #ff3030;
  border-radius: 10rpx;
}

.tab-container, page {
  background-color: #eee;
}

.title2 {
  color: #999;
  font-size: 24rpx;
}

.tab-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical !important;
  -webkit-box-direction: normal !important;
  -webkit-flex-direction: column !important;
  flex-direction: column !important;
}

.grayBackgroundColor {
  background-color: #909090;
}

