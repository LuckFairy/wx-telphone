/* pages/sale-after/purchase-refund.wxss */
.schedule-header{
  height:74rpx;
  width: 750rpx;
  font-size: 30rpx;
  color: #999999
}
.oning{
  color: #1b1b1b ;
}
.current{
  top:55rpx !important;
  left: 28% !important;
  width: 33rpx !important;
  height:33rpx !important;
  box-shadow: 28rpx 0rpx  #e0ca0b inset !important;  
  border: 5rpx rgba(255,231,28,.7) solid !important; 
}
.schedule-header>image{
  height: 74rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
}
.schedule-header-text{
  background-color: rgba(255,255,255,.1);
  z-index: 100;
  width: 750rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.schedule-header-text>text{
  width: 33.33%;
  text-align: center;
  line-height: 74rpx;

}
.schedule{
  flex-direction: column;
}
.schedule-section{
  font-size: 30rpx;
  color: #1b1b1b
}
.schedule-view_1{
  width: 84rpx;
}
.schedule-right{
  width: 50%;
  border-right:#e8e8e8 1rpx solid;
}
.schedule-icon{
  position: absolute;
  top:62rpx;
  left: 42%;
  border:2rpx solid #999;
  width:10rpx;
  height: 10rpx;
  border-radius: 50%;
  box-shadow: 28rpx 0rpx  #999 inset;  
  
}
.schedule-view_2{
  width: 666rpx;
  flex-direction: column;
  margin-right: 38rpx;
}
.schedule-time{
  margin: 50rpx 0 30rpx 0;
}
.schedule-time>text{
  font-size: 28rpx;
  color: #999999
}
.schedule-time-data{
  margin-right: 30rpx;
}
.schedule-text{
  margin-bottom: 30rpx;
}