}

/* 转盘 */
.main{
  width: 652rpx;
  height:652rpx;
  margin: 0 auto;
  margin-top: 300rpx;
}
.canvas-container ul,
.canvas-container li{
  margin: 0 ;
  padding: 0;
  list-style: none;
}

.canvas-container{
  margin: 0 auto;
  position: relative;
  width: 652rpx;
  height: 652rpx;  
  border-radius: 50%;
  /*border: 2px solid #E44025;*/
  /* box-shadow: 0 2px 3px #333,
              0 0 2px #000; */

}
.canvas-content>image{
  width: 652rpx;
  height:652rpx;
}
.canvas-content{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  display: block;
  width: 652rpx;
  height: 652rpx;
  border-radius: inherit;
  background-clip: padding-box;
  background-color: #ffcb3f;
}
.canvas-element{
  position: relative;
  z-index: 1;
  width: inherit;
  height: inherit;
  border-radius: 50%;
}
.canvas-list{
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 9999;
}
.canvas-item{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  color: #e4370e;
  font-weight: bold;
  text-shadow: 0 1rpx 1rpx rgba(255,255,255,.6);
}
.canvas-item-text{
  position: relative;
  display: block;
  /* width: 50px; */
  margin: 0 auto;
  text-align: center; 
  -webkit-transform-origin: 50% 150rpx; 
  transform-origin: 50% 150rpx;
  height:150rpx;
  width: 30rpx;
}

/* 分隔线 */
.canvas-line{
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 99;
}
.canvas-litem{
  position: absolute;
   left: 150rpx;
   top: 0;
   width: 1rpx;
   height: 150rpx;
   background-color: rgba(228,55,14,.4);
   overflow: hidden; 
   -webkit-transform-origin: 50% 150rpx; 
   transform-origin: 50% 150rpx;
}
.canvas-btn{
  position: absolute;
  left: 238rpx;
  top: 215rpx;
  z-index:50;
  width: 172rpx;
  height: 200rpx;
  border-radius: 50%;
  color: #F4E9CC;
  line-height: 200rpx;
  text-align: center;
  font-size: 20rpx;
  text-decoration: none;
}
.canvas-btn>image{
  width: 172rpx;
  height: 200rpx;
}
.canvas-btn.disabled{
    pointer-events: none;
    background: #B07A7B;
    color: #ccc;
}
.canvas-btn.disabled::after{
  border-bottom-color: #B07A7B;
}


.gb-run{ 
    -webkit-transition: all 6s ease;
    transition: all 6s ease;
}
