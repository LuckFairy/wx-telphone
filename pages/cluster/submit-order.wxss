/*全部开始  */
/*顶部团情况开始  */
page {
  background: #efefef;
}

.on {
  background: #ffe71b;
}

.all-list {
  width: 750rpx;
  background: #fff;
  padding-top: 30rpx;
  display: block;
}

.all-commodity-img {
  width: 160rpx;
  height: 160rpx;
  display: inline-block;
}

.all-com-tit {
  height: 40rpx;
  line-height: 40rpx;
}

.all-com {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #efefef;
}

.all-commodity-text {
  display: inline-block;
  margin-left: 30rpx;
  margin-top: 8rpx;
}

.all-com-detail {
  font-size: 28rpx;
  color: #1b1b1b;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.all-com-num {
  font-size: 34rpx;
  color: #a9a9a9;
}

.all-com-size {
  font-size: 24rpx;
  color: #a9a9a9;
  margin-top: 16rpx;
}

.current-price-time {
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 30rpx;
}

.now-price {
  font-size: 24rpx;
  color: #a9a9a9;
}

.now-pri-text {
  font-size: 30rpx;
  color: #ff3030;
  margin-right: 20rpx;
}

.count-down {
  font-size: 24rpx;
  margin-right: 7rpx;
}

.group-now {
  font-size: 26rpx;
  color: #ff3030;
  text-align: right;
}

.all-com-fri-det {
  margin: 0rpx 24rpx;
  padding-bottom: 30rpx;
}

.people-groups {
  font-size: 24rpx;
  display: block;
}

.people-groups::after {
  clear: both;
  content: '.';
  display: block;
  width: 0;
  height: 0;
  visibility: hidden;
}

.peo-gro-num {
  color: #fff;
  background: #ff3030;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  margin-top: 14rpx;
  float: left;
}

.join-people {
  color: #a9a9a9;
  margin-top: 17rpx;
  width: 250rpx;
  float: right;
  text-align: right;
}
/*顶部团情况结束  */
/*收货地址列表开始  */
.address-wrap{
  background: #ffffff;
  margin-top: 16rpx;
  display: block;
}
.address-title{
  display: block;
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 24rpx;
  border-bottom: 1rpx solid #efefef;
}
.address-mail-img{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin-right: 18rpx;
  vertical-align: middle;
}
.address-mail{
  display: inline-block;
  font-size: 28rpx;
  color: #1b1b1b;
}
.address-list{
  display: block;
  padding-bottom: 32rpx;
}
.addr-list-total{
  margin: 20rpx 24rpx 0rpx 24rpx;
  background: #efefef;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
}
.pla-addr-list{
  color: #999;
  font-size: 28rpx;
}
/*收货地址列表结束  */
/*应付总额开始  */
.should-pay-total{
  display: block;
  background: #FFF;
  width: 750rpx;
  text-align: right;
  padding-right: 25rpx;
  font-size: 30rpx;
  padding-bottom: 30rpx;
}
.should-payment{
  color: #1b1b1b;
}
.should-pay-money{
  color: #ff3030;
}
/*应付总额结束  */
/*提交订单开始  */
.submit-order{
  height: 97rpx;
  line-height: 97rpx;
  position: fixed;
  bottom: 0rpx;
  background: #ffe71c;
  width: 100%; 
}
.submit-order-text{
  width: 100%; 
  text-align: center;
}
/*提交订单结束  */