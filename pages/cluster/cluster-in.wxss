}
.clus-total {
    background: #efefef;
    display: block;
}

.clus-list-tit {
    display: inline-block;
}

.clus-list-total {
    display: inline-block;
    font-size: 28rpx;
    height: 58rpx;
    line-height: 58rpx;
    width: 137rpx;
    border: 1rpx solid #c3c3c3;
    color: #1b1b1b;
    text-align: center;
    margin-top: 16rpx;
    margin-bottom: 16rpx;
    background: #fff;
