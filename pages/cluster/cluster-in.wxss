/*全部开始  */
.on{
    background: #FFE71B;
}

.all-list {
    width: 750rpx;
    background: #fff;
    padding-top: 30rpx;
    display: block;
}

.all-commodity-img {
    width: 160rpx;
    height: 160rpx;
    display: inline-block;
}

.all-com-tit {
    height: 40rpx;
    line-height: 40rpx;
}

.all-com {
    width: 160rpx;
    height: 160rpx;
    border: 1rpx solid #efefef;
}

.all-commodity-text {
    display: inline-block;
    margin-left: 30rpx;
    margin-top: 8rpx;
}

.all-com-detail {
    font-size: 28rpx;
    color: #1b1b1b;
    width: 450rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.all-com-num {
    font-size: 34rpx;
    color: #a9a9a9;
}

.all-com-size {
    font-size: 24rpx;
    color: #a9a9a9;
    margin-top: 16rpx;
}

.current-price-time {
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 36rpx;
}

.now-price {
    font-size: 24rpx;
    color: #a9a9a9;
}

.now-pri-text {
    font-size: 30rpx;
    color: #ff3030;
    width: 140rpx;
}

.count-down {
    font-size: 24rpx;
    width: 180rpx;
    margin-right: 7rpx;
}

.group-now {
    font-size: 26rpx;
    color: #ff3030;
    width: 112rpx;
    text-align: right;
}

.all-com-fri-det {
    border-bottom: 1rpx solid #efefef;
