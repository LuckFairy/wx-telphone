    display: block;
}
.inv-total{
    font-size: 28rpx;
    color: #b5b5b5;
    width: 206rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: 1rpx solid #EFEFEF;
    display: inline-block;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
}
.invite-friend{
    margin-right: 32rpx;
