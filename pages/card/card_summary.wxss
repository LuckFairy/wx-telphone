/* pages/card/card_summary.wxss */
page{
    height: 100%;
}
view{
    display: flex;
}

.hide{
    display: none;
}

.flex-row-center-all{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.flex-colunm-center-all{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.card-summary-containner{
    flex-direction: row;
    justify-content: center;
    background-color: #FFE546;
    height: 100%;
    padding-top: 20px;
}
.card-smy-view{
    flex-direction: column;
    width:710rpx;
}
.card-head-view{ background-color: white; border-top-left-radius: 5px; border-top-right-radius: 5px; padding-left:10px; padding-top:10px;
    flex-direction: row; align-items: center;}
    
.mch-icon{
    width:30px;
    height: 30px;
    border-radius: 50%;
    margin-right:10px;
}
.split-img-view{
    width:100%;
}
.summary-detail-view{
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    background-color:white; 
    border-bottom-left-radius: 5px;
    border-bottom-right-radius: 5px;
}
.card-title-view{
    font-size:30rpx;
    font-weight: bold;
}
.card-name-view{
    margin-top:25px;
    font-size: 30rpx;
    font-weight: bold;
}
.card-money-view{
    margin-top:10px;
    font-size:55rpx;
    font-weight: bold;
}
.card-category-view{
    margin-top:10px;
    font-size:20rpx;
    color:white;
}
.card-category-text{
    border-radius: 17rpx;
    background-color:#FF1D33;
    padding:5rpx 30rpx;
}
.card-vlidate-date-view{
    margin-top:20px;
    color:grey;
    font-size:20rpx;
}
.card-btn-use{
    justify-content: center;
    margin-top:40px;
    background-color:#FFE546;
    border-radius: 5px;
    padding: 10px 0rpx;
    color:grey;
    font-size: 25rpx;
    width: 350rpx;
}
.card-btn-save{
    justify-content: center;
    border: 1px solid grey;
    border-radius: 5px;
    padding: 10px 0rpx;
    color:grey;
    font-size: 25rpx;
    width: 350rpx;
    margin-top:10px;
}
.func-list-view{
    padding: 25rpx 20rpx;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width:100%;
    border-top:1px solid #F7F7F7;
}
.func-list-introduction-view{
    padding: 25rpx 20rpx;
    flex-direction: column;
    width:100%;
    border-top:1px solid #F7F7F7;
}

/* --------------卡券二维码 ----------------*/
.overlay{
    display: flex;
    justify-content: center;
    align-items: center;
    position:fixed;top:0px;left:0px;width:750rpx;height:100%;background-color:rgba(10,10,10,0.3);
}
.qr-view{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width:500rpx;
    background-color: white;
    color:grey;
    font-size: 25rpx;
    padding-bottom: 20px;
    position:relative;
}
.close-icon{
    position: absolute;
    right: 2px;
    top:0px;
    font-size:55rpx;
}