<view class="card-summary-containner">
    <loading hidden="{{!loading}}"> 加载中... </loading>
    <!--卡券 -->
    <view class="card-smy-view">
        <!-- title -->
        <view class="card-head-view">
            <view class="card-img-view"><image class="mch-icon" src="{{cardInfo.mchImgurl}}" mode="widthFix"></image></view>
            <view class="card-title-view">{{cardInfo.cardName}}</view>
        </view>
        <!-- 分隔线 -->
        <view class="split-img-view">
            <image class="split-img" src="../../image/card-smy-sp-line.png" mode="widthFix" style="width:100%"></image>
        </view>
        <!-- 详情信息 -->
        <view class="summary-detail-view">
            <view class="card-money-view">{{cardInfo.value/100}}元抵用券<!--东方斯卡拉s可使用--></view>
            <view class="card-name-view">{{cardInfo.cardMoney}}</view>
            <view class="card-category-view card-category-text">活动专享</view>
            <view class="card-vlidate-date-view">有效期：{{cardInfo.cardValidity}}</view>

            <view class="card-btn-use {{isUsedOrGet ? 'hide': ''}}" data-card-id="" bindtap="showOverlay">立即使用</view>
            <view wx:if="{{!saved}}" class="card-btn-save {{(isUsedOrGet || cardInfo.exist) ? 'hide': ''}}" data-card-id="{{cardInfo.cardId}}" bindtap="saveCard">保存优惠券</view>
            <view style="margin-bottom:40px;"></view>
            <!-- 功能列表区 -->
            <navigator url="./card_detail" style="width:100%;">
            <view class="func-list-view">
                    <view class="mText">优惠券详情</view>
                    <view><image src="../../image/ma_card_rught.png" mode="widthFix" style="width:15rpx;"></image></view>
                </view>
            </navigator>
            <!--
            <navigator url="../../store/store-list?cardId=123425" style="width:100%;">
                <view class="func-list-view">
                    <view class="func-desc-view">适用门店</view>
                    <view><image src="../../image/ma_card_rught.png" mode="widthFix" style="width:15rpx;"></image></view>
                </view>
            </navigator>
            -->
            <view wx:if="{{cardInfo.mchDesc}}" class="func-list-introduction-view">
                <text class="mText">品牌介绍</text>
                <text class="grayText xmText" style="background-color: #fcfcfc; margin-top: 25rpx; padding: 10rpx 5rpx; line-height: 120%">{{cardInfo.mchDesc}}</text>
            </view>
            <navigator wx:if="{{qrEntry}}" url="../index-new/index-new" open-type="switchTab" style="width:100%;">
                <view class="func-list-view">
                    <view class="func-desc-view">去首页</view>
                    <view><image src="../../image/ma_card_rught.png" mode="widthFix" style="width:15rpx;"></image></view>
                </view>
            </navigator>
            
        </view>

    </view>
</view>

<view class="overlay" style="display:{{showOverlay ? 'flex' : 'none'}}" >
    <view class="qr-view">
        <image src="{{checkQrImgUrl ? checkQrImgUrl : cardInfo.qrUrl}}" mode="widthFix" style="width:300rpx;margin:40px 10rpx"></image>
        <text>将二维码出示给门店核销员</text>
        <text>由门店核销即可</text>
        <i class="fa fa-times close-icon" catchtap="closeOverlay"></i>
    </view>
    
</view>