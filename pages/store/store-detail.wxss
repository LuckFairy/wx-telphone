/* pages/store/store-detail.wxss */

.store-detail-containner{
    flex-direction: column;
    width: 100%;
    padding: 24rpx;
    background-color: #fff;
}

.store-name-view{
    font-weight: bold;
    margin-bottom: 20rpx;
}
.phone-num-text{
    flex: 1;
}
.store-detail-title {
    min-width: 62pt;
}
.location-view, .tel-view, .photo-view, .open-time-view{
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    min-height: 110rpx;
}
.arrow-view{
    flex:1;
}
.location-text-view{
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    flex:7;
}
.location-dtl-text-view{
    flex:1;
}

.cell-right {
    align-items: center;
    margin-left: 20rpx;
}

.store-detail-street {
   margin-right: 24rpx; 
   color: rgb(75, 163, 112);
   border: 1px solid rgb(75, 163, 112);
   border-radius: 8rpx;
   padding: 8rpx 16rpx;
}

.photo-list-view{
    flex-direction: row;
    justify-content: flex-start;
    flex: 1;
}
.store-image {
    width: 110rpx;
    margin-right: 20rpx;
}



