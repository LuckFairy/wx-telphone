scroll-view{
    height: 100%;
    display: block;
    background-color: #ECF2F9;
    padding-top:10px;
}
text{
    display: block;
    text-align: center;
    overflow: hidden;
    margin:0px;
    padding:0px;
}
.hot-goods-view{
    flex-direction: column;
    width:100%;
}

.card-list-view{
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap:wrap;
    width:750rpx;
    padding-left:30rpx;
    padding-bottom:15px;
}
.card-item-view{
    flex-direction: column;
    width:330rpx;
    height: 270px;
    background-color:white;
    margin-right:30rpx;
    margin-top:10px;
}
.card-img-view{
    position: relative;
}
.card-img{
    width:330rpx;
    height: 120px;
}
.mch-img{
    position: absolute;
    width:40px;
    height: 40px;
    left:30rpx;
    bottom:-20px;
    border-radius: 50%;
    box-shadow: 0px 5px 10px rgba(1,1,1,0.2);
}
.card-down-part-view{
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width:100%;
    margin-top:30px;
}