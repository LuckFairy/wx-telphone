.section-list-sm {
    background-color: white;
    display: flex;
    flex-direction: column;
    width: 100%;
}
.section-list-sm-row {
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 15rpx 30rpx;
    border-bottom: 1px solid #eee;
}
/*
.section-list-row:last-child {
    border-bottom: none;
}
*/

.section-list-sm-row-title {
    margin-bottom: 10rpx;
    height: 40rpx;
    font-size: 14px;
    color: #000;
    margin-right: 5px;
}
.section-list-sm-row-summary {
    height: 60rpx;
    line-height: 30rpx;
    font-size: 12px;
    color: #888;
    overflow: hidden;
    text-overflow: ellipsis;
}

