/* modal.wxss */
/************** 提交试用的弹出框 ***************/
.modal-secondText {
	margin-top: 8rpx;
	line-height: 140%;
}


/************** 重复领用赠品时的弹出框 **************/
.modal-firstText {
	line-height: 140%;
}

.modal-image {
	align-self: center;
	margin-bottom: 20rpx;
	width: 110rpx;
}

/************** 积分页面积分不够时的弹出框 **************/
.modal-spline {
	width: 1px;
	background-color: #EAEAEA;
}

/************** 订单领用新品点击确认取货的弹出框 **************/
.overlay-right {
	position: absolute;
  right: 30rpx;
  top:30rpx;
  width:30rpx;
  height: 30rpx;
}
.mode-right-image{
  width: 100%;
  height: 100%;
}
.modal-image-erwei{
  width: 400rpx;
  height: 200rpx;
}
.modal-secondText-erwei{
  margin-top: 20rpx;
}

/************** 优惠券使用规则的弹出框 **************/
.coupon-content{
  padding:0 56rpx;
  width: 640rpx;
  box-sizing: border-box;
}
.coupon-body {
  padding: 0;
}
.overlay-center{
  position: absolute;
  left: 50%;
  margin-left: -160rpx;
  top:-90rpx;
  width: 320rpx;
  height: 180rpx;
}
.mode-center-image{
  width: 100%;
  height: 100%;
}
.modal-titleText{
  text-align: center;
  font-size: 42rpx;
  color:#1b1b1b;
  margin: 130rpx 0 60rpx ;
}
.modal-text{
  color:#999;
  font-size: 28rpx;
  text-align: left;
  margin-bottom: 10rpx;
}
.btn-yellow{
  color:#1b1b1b;
  font-size: 30rpx;
  background: #ffe71c;
  width:100%;
  padding:30rpx 235rpx;
  margin:60rpx 0 50rpx;
  line-height: 1;
}