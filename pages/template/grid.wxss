.section-grid {
    display: block;
    width: 100%;
}

.section-grid-cell {
    width: 250rpx;
    /*height: 220rpx;*/
    float: left;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 20rpx;
}
.section-grid-image {
    height: 240rpx;
    width: 240rpx;
    margin-bottom: 20rpx;
}
.section-grid-cell .fa {
    font-size: 36px;
    margin-bottom: 20rpx;
}

.section-grid-cell .title-text {
    margin-bottom: 20rpx;
}

.section-grid-cell .detail-text {
    margin-bottom: 20rpx;
}