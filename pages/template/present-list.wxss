/* present-list.wxss */

.container {
	padding:30rpx 24rpx;
	width: 100%;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  z-index: 10
}

.modelImage {
	width: 200rpx;
  height: 200rpx;
	margin-right: 20rpx;
}

.modelRightContainer {
	flex: 1;
	flex-direction: column;
	justify-content: space-between;
}

.description {
	flex-direction: column;
}

.title {
  font-weight: 500;
  font-size: 28rpx;
  color: #1b1b1b;
  text-align: left;
}
.subTitle {
	font-size: 10pt;
}

.info {
	flex-direction: column;
}

.priceInfo {
  margin-top: 30rpx;
	margin-bottom: 20rpx;
	align-items: flex-end;
}

.special {
	font-size: 44rpx;
	font-weight: bold;
  align-items: flex-end;
  color: #ff3030;
}

.price {
	margin-left: 14rpx;
	font-size: 24rpx;
	text-decoration: line-through;
	vertical-align: bottom;
}

.controlWrap {
	justify-content: space-between;
	align-items: center;
}

.badgeWrap {
  font-size: 24rpx;
  width: 140rpx;
  height:40rpx;
  border:1rpx solid #f49595;
	background-color: rgba(240, 50, 50, 0.1);
	border-radius: 24rpx; 
	align-items: center;
	justify-content: center;
	margin-right: 14rpx;
}

.getButton {
  width: 162rpx;
  height:52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 28rpx;
	color: #fff;
  background-color:#ff3030 ;
  border-radius: 10rpx;

}
