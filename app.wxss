@import "./page/common/template/modal.wxss";

/* 定义全局样式变量 */

/* 缺省字体颜色 */

page {
  background-color: #eee;
}

view {
  display: flex;
  position: relative;
  box-sizing: border-box;
}

.show-block {
  display: block;
}

.show-flex {
  display: flex;
}

.hide {
  display: none;
}

page {
  height: 100%;
}

.xmText {
  font-size: 10pt;
}

.mText {
  font-size: 24rpx;
}

.normalText {
  font-size: 12pt;
}

.titleText {
  font-size: 13pt;
  font-weight: 500;
}

.numberText {
  font-size: 23pt;
  font-weight: bold;
}

.grayText {
  color: #909090;
}

.grayBackgroundColor {
  background-color: #909090;
}

.center {
  text-align: center;
}

/* 模块框 */

.overlay {
  position: fixed;
  display: flex;
  top: 0;
  justify-content: center;
  align-items: center;
  width: 750rpx;
  height: 100%;
  background-color: rgba(10, 10, 10, 0.3);
  z-index: 1000;
}

.overlay-shade {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(10, 10, 10, 0.3);
  z-index: 1111;
}

.overlay-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 72%;
  border-radius: 5pt;
  background-color: #fff;
  flex-direction: column;
  z-index: 2222;
}

.overlay-body {
  /* padding: 22pt; */
  text-align: center;
  font-size: 12pt;
  flex-direction: column;
}

.overlay-bottom-button {
  flex: 1;
  font-size: 12pt;
  text-align: center;
  padding: 8pt 0;
}

.overlay-bottom-button:active {
  opacity: 0.6;
}

/** 列表分割线 **/

.sp-line {
  height: 1px;
  width: 100%;
  background-color: #eaeaea;
}

/* 无分割线 */

no-border {
  border-width: 0;
}

/* 有分割线 */

.sp-border {
  border-width: 0;
  border-bottom-width: 1px;
  border-color: #eaeaea;
  border-style: solid;
}

/* 模拟点击 */

.navigator:active {
  opacity: 0.6;
}

.specialRedText {
  color: rgb(250, 50, 50);
}

.specialRedBackgroundColor {
  background-color: rgb(250, 50, 30);
}

/* 主题颜色 */

.hotTextColor {
  color: #ffd23c;
}

/* 主题背景颜色 */

.hotBackgroundColor {
  background-color: #ffe546;
}

/*没有数据的时候  */

.no-data {
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  width: 100%;
  min-height: 400rpx;
}

.no-data image {
  width: 160rpx;
  height: 160rpx;
  margin-top: 100rpx;
}

.no-data-txt {
  margin-top: 60rpx;
  color: #999;
  font-size: 28rpx;
}

/*电话号码样式  */

.calling {
  color: blue;
  text-decoration: underline;
}

/*表单样式  */

.sub-button {
  position: absolute;
  top: 0;
  margin: 0;
  padding: 0;
  width: 100;
  height: 100%;
  opacity: 0;
}

/*头部错误提示  */

.form-err-view {
  height: 32px;
  line-height: 32px;
  /* position: fixed; */
  top: 0px;
  left: 0px;
  right: 0px;
  z-index: 10;
  display: flex;
  flex-direction: column;
  background-color: white;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

.form-err-text {
  background-color: #e64340;
  color: #fff;
  font-size: small;
  height: 32px;
  line-height: 32px;
  width: 100%;
  text-align: center;
  word-wrap: break-word;
  word-break: break-all;
}

/*上下三角形  */

.down {
  display: inline-block;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 15rpx solid black;
  margin-top: 32rpx;
  margin-left: 18rpx;
}

.up {
  display: inline-block;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: none;
  border-bottom: 15rpx solid black;
  margin-top: 32rpx;
  margin-left: 18rpx;
  margin-bottom: 16px;
}

/*右键标  */

.right {
  display: inline-block;
  width: 16rpx;
  height: 28rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-image: url("data:image/png;base64,");
}

/*綁定手機號彈窗  */

.tel-content {
  width: 620rpx;
  height: 288rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.tel-content .title {
  padding: 80rpx;
}

.tel-content .modal-firstText {
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 40rpx;
  letter-spacing: 0px;
  color: #1b1b1b;
}

.tel-content .modal-button button {
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
  background: #fff;
  border-top: solid 1rpx #e5e5e5;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #09bb07;
}

.dropload-noData {
  display: block;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: #999;
}

/*拼团弹窗*/

@keyframes kf-marque-animation {
  0% {
    transform: translateX(-100%);
  }
  3%{
    transform: translateX(0);
  }
  19.7%{
    transform: translateX(0);
  }
  22.7%{
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(-100%);
  }
}

.pintuan-head {
  display: block;
  width: 375rpx;
  height: 66rpx;
  overflow: hidden;
  line-height: 66rpx;
  padding: 0 20rpx 0 10rpx;
  background-color: rgba(21, 20, 20, 0.7);
  border-radius: 6px;
  opacity: 0.7;
  position: fixed;
  z-index: 100000;
  left: 0;
  top: 100rpx;
  animation: kf-marque-animation 30s linear infinite;
}

.pintuan-head-img {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  vertical-align: middle;
}

.pintuan-head-text {
  font-size: 24rpx;
  color: #fff;
}
