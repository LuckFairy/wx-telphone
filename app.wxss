.titleText {
    font-size: 13pt;
    font-weight: 500;
}

.numberText {
    font-size: 23pt;
    font-weight: bold;
}

.grayText {
    color: #909090;
}

.grayBackgroundColor {
    background-color: #909090;
}

.center {
    text-align: center;
}

/* 模块框 */

.overlay {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0px;
    left: 0px;
    width: 750rpx;
    height: 100%;
    background-color: rgba(10, 10, 10, 0.3);
    z-index: 10000;
}

.overlay-content {
    width: 72%;
    border-radius: 5pt;
    background-color: #fff;
    flex-direction: column;
}

.overlay-body {
    padding: 22pt;
    text-align: center;
    font-size: 12pt;
    flex-direction: column;
}

.overlay-bottom-button {
    flex: 1;
    font-size: 12pt;
    text-align: center;
    padding: 8pt 0;
}

.overlay-bottom-button:active {
    opacity: 0.6;
}

/** 列表分割线 **/

.sp-line {
    height: 1px;
    width: 100%;
    background-color: #eaeaea;
}

/* 无分割线 */

no-border {
    border-width: 0;
}

/* 有分割线 */

.sp-border {
    border-width: 0;
    border-bottom-width: 1px;
    border-color: #eaeaea;
    border-style: solid;
}

/* 模拟点击 */

.navigator:active {
    opacity: 0.6;
}

.specialRedText {
    color: rgb(250, 50, 50);
}

.specialRedBackgroundColor {
    background-color: rgb(250, 50, 30);
}

/* 主题颜色 */

.hotTextColor {
    color: #ffd23c;
}

/* 主题背景颜色 */

.hotBackgroundColor {
    background-color: #ffe546;
}
