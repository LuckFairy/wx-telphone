<view class="main-container">
  <!--搜索  -->
  <view class='search-msg'>
    <view class='search-input'>
      <image class='search-image' src='../../../image/search.png'></image>
      <input class='search-text' focus='true' confirm-type='go' placeholder='输入券名称直接搜索' bindconfirm='searchCard' bindinput='goNull'></input>
    </view>
    <view class='search-select'>
      <view class='search-current' bindtap='goSelect'>
        <text class='search-current-text'>{{typeText}}</text>
        <text class="{{showHide ? 'down': 'up'}}"></text>
      </view>
    </view>
  </view>
  <view class='wait-choose' hidden='{{showHide}}' bindtap='goChooseCard'>
    <text class='online-card online-offline {{xianshangCard?xianshangCard:""}}' data-select='0'>线上券</text>
    <text class='offline-card online-offline {{shopCard?shopCard:""}}' data-select='1'>门店券</text>
  </view>
  <!-- nav详细内容展示区-->
  <!--one  -->
  <scroll-view scroll-y="true" style="height: {{windowHeight}}px; width: {{windowWidth}}px;" bindscrolltolower='pullUpLoadone' lower-threshold='0' scroll-top="{{scrollTop}}">
    <view class='overlay' style="display:{{showHide ? 'none' : 'flex'}}"></view>
    <block wx:if="{{normal || normal.length}}" wx:for='{{normal}}' wx:for-item="card">
      <view wx:if='{{(card.is_use==0)&&(card.is_expired==0)}}' data-distinguish='{{0}}' class='card-list-view normal-item'  data-source='{{card.source}}' data-type='{{card.type}}' data-id='{{card.id}}'>
   <!--      <view class='mon-list-left'>
          <view class='mon-image-title'>
            <text class='mon-title'>{{card.cname}}</text>
          </view>
          <view class='mon-price-day'>
            <text class='mon-price'>期限：{{card.start_time_str}}-{{card.end_time_str}}</text>
            <text class='mon-day' wx:if='{{category==3}}'>券码：{{card.card_no}}</text>
            <text class='mon-day' wx:if='{{category==1}}'>券ID：{{card.id}}</text>
          </view>
        </view> -->
      <!--   <view class='mon-list-right'>
          <view class='mon-money-right'>
            <text class='money-right-text'>￥{{card.face_money}}</text>
          </view>
          <text class='mon-right-go'>立即使用</text>
        </view> -->

      <!--正常券-->
            <view class="card-item-view" bindtap='goDetail' data-source='{{card.source}}' data-type='{{card.type}}' data-id='{{card.coupon_id}}' data-distinguish='{{0}}'>

              <view class="card-list-view-left">
                 <view data-recid="{{card.recId}}" data-url-param="cardId={{card.coupon_id}}&cardId={{card.cardId}}&saved=1&activityId={{card.activityId}}" data-qr-url='{{card.qrUrl}}' class='card-item-up'>
                  <view class="card-item-up-left">
                    <view class="card-money-text">￥<text>{{card.face_money}}</text></view>
                    <view  class="card-limit-text">{{card.type_left}}</view>
                    
                  </view>
                  <view class='card-item-up-middle card-item-up-middle-normal'>
                    <view class="card-title-text">{{card.cname}}</view>
                    <!-- <view wx:if="{{category==3}}" class='card-tip'>现金券</view>
                    <view wx:if="{{category==1 && card.limit_money==0}}" class='card-tip'>通用券</view>
                    <view wx:if="{{category==1 && card.limit_money!=0}}" class='card-tip'>满减券</view> -->

                    <view class="card-time-text">{{card.start_time_str}}-{{card.end_time_str}}</view>
                  </view>
                       
                </view>
                <view class="card-item-down" wx:if='{{category==3}}'>券码：{{card.card_no}}</view>
                <view class="card-item-down" wx:if='{{category==1}}'>券ID：{{card.id}}</view>
              </view>
              <view class="card-list-view-right">
                <view class="card-list-view-right-text">{{card.type_right}}</view>
              </view>

            <view class="card-item-btn-view card-item-btn-view-normal">
                  <text>立即使用</text>
            </view>

            </view>

      </view>
      <!--two  已过期-->
      <view wx:elif='{{(card.is_use==0)&&(card.is_expired==1)}}' class='card-list-view normal-item' data-activity-id='{{card.activity_id}}' data-id='{{card.id}}'>
          <view class="bj-nouse"  data-source='{{card.source}}' data-type='{{card.type}}' data-id='{{card.coupon_id}}' data-distinguish='{{0}}'>

              <view class="card-list-view-left">
                 <view data-recid="{{card.recId}}" data-url-param="cardId={{card.coupon_id}}&cardId={{card.cardId}}&saved=1&activityId={{card.activityId}}" data-qr-url='{{card.qrUrl}}' class='card-item-up'>
                  <view class="card-item-up-left">
                    <view class="card-money-text unuse">￥<text>{{card.face_money}}</text></view>
                    <view class="card-limit-text unuse">{{card.type_left}}</view>
 
                  </view>
                  <view class='card-item-up-middle card-item-up-middle-normal'>
                    <view class="card-title-text unuse">{{card.cname}}</view>
                   
                    <view class="card-time-text">{{card.start_time_str}}-{{card.end_time_str}}</view>
                  </view >
                  <view class="card-item-btn-view" style="visibility:hidden;">
                      <text>立即使用</text>
                    </view>
                  
                </view>
                <view class="card-item-down unuse">券ID：{{card.id}}</view>
              </view>
              <view class="card-list-view-right-unused">
                <view class="card-list-view-right-text">{{card.type_right}}</view>
              </view>
              <view  class="card-item-up-right-unused expired"></view>
             

            </view>
      </view>
      <!--three 已使用-->
      <view wx:else class='card-list-view normal-item' data-activity-id='{{card.activity_id}}' data-id='{{card.id}}'>
       
                 <view class="bj-nouse"  data-source='{{card.source}}' data-type='{{card.type}}' data-id='{{card.coupon_id}}' data-distinguish='{{0}}'>

              <view class="card-list-view-left">
                 <view data-recid="{{card.recId}}" data-url-param="cardId={{card.coupon_id}}&cardId={{card.cardId}}&saved=1&activityId={{card.activityId}}" data-qr-url='{{card.qrUrl}}' class='card-item-up'>
                  <view class="card-item-up-left">
                    <view class="card-money-text unuse">￥<text>{{card.face_money}}</text></view>
                    <view class="card-limit-text unuse">{{card.type_left}}</view>
 
                  </view>
                  <view class='card-item-up-middle card-item-up-middle-normal'>
                    <view class="card-title-text unuse">{{card.cname}}</view>
                   
                    <view class="card-time-text">{{card.start_time_str}}-{{card.end_time_str}}</view>
                  </view >
                  <view class="card-item-btn-view" style="visibility:hidden;">
                      <text>立即使用</text>
                    </view>
                  
                </view>
                <view class="card-item-down unuse">券ID：{{card.id}}</view>
              </view>
              <view class="card-list-view-right-unused">
                <view class="card-list-view-right-text">{{card.type_right}}</view>
              </view>
              <view  class="card-item-up-right-unused used"></view>
             

            </view>
      </view>
    </block>
    <view wx:if='{{nullList}}' class="no-data-view">
      <image src="../../../image/ma_card_no_1.png" class="no-data-image" />
      <text class="mText" class="no-data-text">哎呀，未搜索到优惠券</text>
      <text class="mText" class="no-data-text">换个字眼试试</text>
      <!-- <button class='no-data-btn' bindtap='getCoupon'>去领券</button> -->
    </view>
    <text wx:if="{{!loadingone&&!nullList}}" class='dropload-noData'>已无更多</text>
    <text wx:if="{{loadingone&&!nullList}}" class='dropload-noData'>上拉加载更多...</text>
  </scroll-view>
</view>
<view class="overlay" style="display:{{showOverlay ? 'flex' : 'none'}}">
  <view class="qr-view">
    <image src="{{qrImageUrl}}" class="qr-image" mode="widthFix"></image>
    <text>将二维码出示给门店核销员</text>
    <text>由门店核销即可</text>
    <i class="fa fa-times close-icon" catchtap="closeOverlay"></i>
  </view>
</view>