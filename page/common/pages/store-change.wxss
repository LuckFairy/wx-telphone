/* page/common/pages/store-change.wxss */
/* 选择区域 */
.setction-top{
  height: 88rpx;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  color: #7d7d7d;
  font-size: 28rpx;
  border-width:0;
border-top-width:1px;
border-color:#eaeaea;
border-style:solid;
margin-bottom: 12rpx;
}
.section{
  width: 220rpx;
  padding: 0 24rpx;
  justify-content: space-between;
  align-items: center;
}
.store-down{
  width: 24rpx;
  height: 24rpx;
}
/* 列表部分 */
.check{
  width: 36rpx;
  height: 36rpx;
}

.list-item-dtl-icon-view {
  margin-right: 20rpx;
  align-items: center;
  width: 23px;
  height: 90rpx;
}

.store-list-containner {
  flex-direction: column;
}
/* .store-containner{
  padding-bottom: 98rpx;
} */
.list-view-wrap {
  flex-direction: column;
  justify-content: flex-start;
  background-color: #fff;
}


.list-item-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
}
.list-item-view navigator{
  display: flex;
}
.list-item-dtl-select-view {
  padding: 10px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list-item-dtl-left-view {
  flex: 1;
  flex-direction: column;
  justify-content: center;
}

.list-item-dtl-right-view {
  flex-direction: column;
  justify-content: center;
}

.list-item-title-view {
  font-weight: bold;
}

.list-item-addr-view {
  margin-top: 16rpx;
}

.list-item-location-dist-view {
  display: block;
  text-align: center;
}

.list-item-location-icon-view {
  display: block;
  text-align: center;
  margin-top: 16rpx;
}

.store-footer {
  position: fixed;
  width: 100%;
  height: 98rpx;
  bottom: 0;
  left: 0;
  
}

.store-footer text {
  display: block;
  width: 100%;
  height: 98rpx;
  color: #1b1b1b;
  background: #ffe71c;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
}
/* 区域弹窗*/
.couponlist-wrap{
  display: block;
  overflow-y: auto;
}
.area-content{
  width:640rpx;
  height:889rpx;
  overflow-y: auto;
  overflow-x: hidden;
  border-radius: 4rpx;
}
.area-item{
  height: 88rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  align-items: center;
  width: 100%;
}
/*搜索门店*/
.search-msg {
  display: flex;
  width: 750rpx;
  height: 88rpx;
  border-top: 1rpx solid #efefef;
  background: #fff;
  position: relative;
  top: 0rpx;
  left: 0rpx;
  z-index: 10002;
  padding: 10rpx 24rpx;
}

.search-input {
  display: block;
  width: 100%;
  height: 60rpx;
  position: relative;
  background: #efefef;
  border-radius: 6rpx;
}

.search-image {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: 20rpx;
  top: 15rpx;
}

.search-text {
  position: absolute;
  font-size: 26rpx;
  color: #1b1b1b;
  left: 60rpx;
  display: inline-block;
  width: 450rpx;
  height: 60rpx;
}
/* 推荐 */
.item-recommend{
  display: inline-block;
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #fff;
  background: #ffa207;
  border-radius: 4rpx;
  padding:4rpx 8rpx;
}
.distance{
  font-size: 26rpx;
  color: #999;
}