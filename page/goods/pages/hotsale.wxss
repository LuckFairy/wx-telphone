/*  -------------闪购-------------------- */

.goods-list-containner {
    flex-direction: column;
    align-items: center;
    width: 750rpx;
}

.goods-list-header-view {
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 80rpx;
    position: fixed;
    top: 0px;
    left: 0px;
    width: 750rpx;
    z-index: 10;
    background-color: #fff;
    border-bottom: 1px solid #eee;
}

.nav-text {
    font-size: 13px;
    padding: 3px 40rpx;
    box-sizing: border-box;
}

.nav-active {
    background-color: black;
    color: white;
}

.nav-inactive {
    background-color: white;
    color: #9c9c9c;
}

.left-nav {
    border-right: 0px;
}

.right-nav {
    border-left: 0px;
}

.next-sale-time-view {
    font-size: 20rpx;
    color: grey;
    margin-top: 5px;
    margin-bottom: 5px;
}

.prod-name-text {
  display: inline-block;
    text-align: left;
    white-space: nowrap;
    overflow: hidden;
    font-size: 14px;
    margin-right: 10rpx;
    width: 400rpx;
    text-overflow: ellipsis;
}
.text-data-list{
  
}
.goods-list-view {
    flex-direction: column;
    align-items: center;
    width: 750rpx;
}

.goods-item-view {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-bottom: 30rpx solid #f3f3f3;
}

.goods-cover-img {
    width: 750rpx;
}

.goods-info-view {
    flex-direction: row;
    align-items: center;
    width: 750rpx;
    padding: 20rpx 20rpx;
    background-color: #fff;
    font-size: 13px;
}

.goods-info-left-view {
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    font-size: 30rpx;
    flex: 1;
}

.goods-info-right-view {
    flex-direction: row;
    justify-content: flex-end;
    align-items: center;
    font-size: 30rpx;
}

.time-text {
    background-color: black;
    color: white;
    margin: 0px 3px;
    width: 40rpx;
    text-align: center;
}

