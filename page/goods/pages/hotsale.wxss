.prod-time-godown{
  width: 320rpx;
  justify-content: flex-end;
}
.scroll-view {
    height: 100%;
}
/*拼团购  */
.group-shop-father{
  display: block;
  width: 750rpx;
}
.group-shop{
  width: 367rpx;
  display: inline-block;
  background: #fff;
  margin-top: 15rpx;
}
.group-shop-image{
  width: 367rpx;
  height: 367rpx;
}
.group-shop-title{
  width: 367rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  display: block;
  padding: 0 20rpx;
}
.bac-color{
   background: #EFEFEF;
   width: 100%;
}
.group-shop:nth-child(2n){
  margin-left: 16rpx;
}
.group-shop-num{
  font-size: 22rpx;
  margin-left: 20rpx;
  border: 1rpx solid #c3c3c3;
  padding: 2rpx 10rpx;
}
.group-shop-bottom{
  margin-top: 10rpx;
  vertical-align: bottom;
  height: 54rpx;
  margin-bottom: 20rpx;
}
.gro-now{
  font-size: 30rpx;
  color: #C10A0A;
  margin-left: 20rpx;
  line-height: 80rpx;
}
.gro-pre{
  font-size: 22rpx;
  color: #c3c3c3;
  margin-left: 10rpx;
  line-height: 85rpx;
  margin-right: 30rpx;
  
}
.go-gro{
  font-size: 32rpx;
  background: #FF1D82;
  padding: 0rpx 20rpx;
  color: #fff;
  height: 54rpx;
  line-height: 54rpx;
}