/* page/group-buying/tuan-detail.wxss */
@import "./group-join.wxss";

@import "../common/index.wxss";
/*团成功  */
.pintuan-succ {
  background: #fff;
  display: block;
  padding: 0 0 6rpx;
  overflow: hidden;
}

.pintuan-succ-one {
  margin-top: 50rpx;
  text-align: center;
  justify-content: center;
}

.pintuan-succ-img {
  width: 46rpx;
  height: 46rpx;
  margin-right: 5px;
}

.pintuan-succ-text {
  color: #09bb07;
  font-size: 32rpx;
}

.pintuan-succ-btn {
  color: inherit;
  font-size: 32rpx;
  width: 420rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #ffe71c;
  border: solid 1px #ffd21c;
  border-radius: 10rpx;
  margin-top: 56rpx;
}

/*商品详情*/

.pro-detail {
  margin-top: 16rpx;
  display: block;
  overflow: hidden;
  background: #fff;
}

.pro-detail label {
  display: flex;
  height: 88rpx;
  align-items: center;
  padding: 0 24rpx;
  border-bottom: solid 1px rgba(27, 27, 27, 0.1);
}
.pro-detail label:first-child{
  justify-content: space-between;
}
.right-go{
  width: 13rpx;
	height: 25rpx;
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center;
  background-image: url("data:image/png;base64,");
}
.pro-detail label:last-child{
  border-bottom: none;
}

.item-text-one {
  display: block;
  width: 200rpx;
  text-align: center;
  color: #1b1b1b;
  font-size: 30rpx;
}

.item-text-two {
  flex: 1;
  display: block;
  color: #999;
  font-size: 28rpx;
}

.last-time{
  font-size:24rpx;
  color:#999;
  display:inline-block;
  text-align:right;

}