        <text class='sec-list-dyn'>06</text>
        <text class='sec-list-text'>时</text>
        <text class='sec-list-dyn'>22</text>
        <text class='sec-list-text'>分</text>
        <text class='sec-list-dyn'>08</text>
        <text class='sec-list-text'>秒</text>
