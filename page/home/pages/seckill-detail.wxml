    </view>
  </view>
  <!--秒杀倒计时结束  -->
  <!--商品详情区域开始  -->
  <!--商品详情区域开始  -->
  <view class="middle-box">
      <text class="middle-title">dhuhchzkjcxcckjzzhcc重复电话空即是色dhuhchzkjcxcckjzzhcc重复电话空即是色</text>
