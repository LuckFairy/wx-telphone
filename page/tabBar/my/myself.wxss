/*顶部个人信息  */

page {
  background: #ececec;
}

.myself {
  display: block;
}
.myself-phone{
  width: 300rpx;
  flex-direction: column;
  justify-content:center;
}
.myself-top {
  justify-content: space-between;
  height: 170rpx;
  width: 750rpx;
  background: #ffe71c;
}

.myself-photo {
  display: inline-block;
  overflow: hidden;
  margin-top: 19rpx;
  margin-left: 24rpx;
  border-radius: 50%;
}

.myself-detail {
  width: 320rpx;
  flex-direction: column;
  font-size: 0rpx;
  margin-top: 35rpx;
  margin-left: 14rpx;
}

.myself-image {
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
  border: 1rpx #fff solid;
}

.heading {
  width: 122rpx;
  height: 122rpx;
  border-radius: 40%;
  object-fit: cover;
  clip-path: circle(40% at center);
  display: block;
  float: left;
}

.myself-addr-text {
  font-size: 30rpx;
  color: #1b1b1b;
}

.myself-id {
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-right: 24rpx;
  font-size: 36rpx;
  color: #1b1b1b;
}

.myself-name {
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-right: 24rpx;
  font-size: 34rpx;
  color: #1b1b1b;
}


.myself-addr-image {
  width: 16rpx;
  height: 26rpx;
  padding-left: 10rpx;
}

.myself-address {
  margin-top: 10rpx;
  display: flex;
  font-size: 0rpx;
  justify-content: flex-start;
  align-items: center;
}

/*顶部个人信息结束  */

