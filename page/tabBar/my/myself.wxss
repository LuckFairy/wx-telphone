.myself-order {
  display: flex;
  font-size: 0rpx;
  justify-content: space-between;
  /* align-items: center; */
  height: 88rpx;
  line-height: 88rpx;
  padding: 0rpx 24rpx;
  border-bottom: 1rpx solid #ececec;
  background: #fff;
}

.myself-order-total {
  font-size: 0rpx;
  display: flex;
  align-items: center;
}

.myself-order-image {
  width: 18rpx;
  height: 28rpx;
  display: inline-block;
}

.myself-order-list {
  font-size: 30rpx;
  display: inline-block;
  color: #1b1b1b;
}

.myself-order-going {
  font-size: 26rpx;
  display: inline-block;
  margin-right: 10rpx;
  color: #999;
}

