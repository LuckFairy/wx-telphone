.item{
  padding-left: 25rpx;
  padding-right: 25rpx;
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(255, 255, 255, 1);
}
.top{
  margin-top: 17rpx;
  background-color: rgba(255, 255, 255, 1);
  border-bottom:1px solid #e5e5e5;
}

.text{
  font-size: 28rpx;
  color: #222222;
  display:flex;
justify-content:center;
align-items:center;
}

.text-input{
   text-align:right;
}

.line{
  width: 100%;
  height: 1rpx;
  background-color: rgba(229, 229, 229, 1);
  
}

.input{
  width: 295rpx;
  font-size: 28px;
  color: #999999;
 
}

.item-icon{
  margin-left: 12rpx;
  width: 13rpx;
	height: 25rpx;
}

.text-right{
   color: #5f5f5f;
}

.item-right{
  display: flex;
  align-items: center;
}

.item-account{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999999;
  padding-left: 27rpx;
  padding-right: 24rpx;
  padding-bottom: 30rpx;
    background-color: rgba(255, 255, 255, 1);
}

.item-account-text{
  font-size: 28rpx;
  color: #999999;
  margin-top: 25rpx;
}

.item-account-content{
  flex-direction: column;
  
}

.content-btn{
  margin-top: 61rpx;
  background-color: rgba(68, 187, 0, 1);
	border-radius: 4rpx 4rpx 4rpx 4rpx;
  color: #ffffff;
  font-size: 32rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  
}

