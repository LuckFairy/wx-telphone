/* page/distribution/my_record.wxss */

.main-container {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  height: 100%;
}

.nodata{
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.title {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 28rpx;
  padding-right: 28rpx;
  background-color: rgba(249, 249, 249, 1);
}

.title-text {
  font-size: 26rpx;
  color: #000;
}

.content {
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 28rpx;
  padding-right: 28rpx;
  background-color: rgba(255, 255, 255, 1);
  border-bottom: 1px solid #e5e5e5;
}

.content-text-left {
  font-size: 26rpx;
  color: #999;
}

.content-text-right {
  font-size: 32rpx;
  color: #000;
}
