.white{
  color: white;
}
.gray{
  color:rgba(255, 255, 255, 0.4)
}
.userInfoBtn{
  opacity: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
}
.shallowGray{
  color: #999;
}
.black{
  color: #222;
}
.shallowBlack{
  color:#5f5f5f;
}
.line{
  border-width: 1rpx;
  border-color: #e5e5e5;
  border-style: solid; 
}
.blue{
  color: #388bff;
}
.padding{
  padding:0 24rpx;
}
.height{
  height: 88rpx;
  align-items: center;
}
.m-t24{margin-top: 24rpx;}
.m-t16{margin-top: 16rpx;}
/* top */
page {
  background: #ececec;
  font-size: 24rpx;
}

.myself {
  display: block;
}

.myself-top {
  justify-content: space-between;
  height: 190rpx;
  width: 750rpx;
  align-items: center;
}
.gradient{
    background: -moz-linear-gradient(top, #2d2d3e 0%, #56596a 100%);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#2d2d3e), color-stop(100%,#56596a));
    background: -webkit-linear-gradient(top, #2d2d3e 0%,#56596a 100%);
    background: -o-linear-gradient(top, #2d2d3e 0%,#56596a 100%);
    background: -ms-linear-gradient(top, #2d2d3e 0%,#56596a 100%);
    background: linear-gradient(to bottom, #2d2d3e 0%,#56596a 100%);
}

.myself-photo {
  display: inline-block;
  overflow: hidden;
  border-radius: 50%;
  margin-left: 24rpx;
  width: 100rpx;
  height: 100rpx;
}
.heading {
  border-radius: 40%;
  object-fit: cover;
  clip-path: circle(40% at center);
  display: block;
  float: left;
}
.myself-id {
  margin-right: 24rpx;
  font-size: 28rpx;
  overflow:hidden;
width: 100%;
text-overflow:ellipsis;
white-space:nowrap;
}
.myself-detail {
  flex:1;
  display: inline-block;
  font-size: 0rpx;

  margin-left: 20rpx;
}

.myself-addr-text {
  font-size: 24rpx;
}


/* 中间内容 */
.midBox{
  flex-direction: column;
  background: #fff;
}
.midBox-top{
  flex-direction: column;
  justify-content: center;
  height: 260rpx;
  padding: 40rpx 0;
  
}
.midBox-top text{
  text-align: center;
  display: block;
}
.midBox-top text:nth-of-type(2){
  margin: 32rpx 0;
  font-size: 64rpx;
}
.midBox navigator:last-child{
  justify-content: space-between;
  display:flex;
  border-left: none;
  border-right: none;
}
.midBox navigator:last-child view{
  align-items: center;
}

.midBox-item{
  height: 206rpx;
  background: #fff;
  justify-content: space-around;
}
.midBox-item view{
  flex-direction: column;
  align-items: center;
}
.midBox-item view text:first-child{
  font-size: 48rpx;
  margin: 52rpx 0 30rpx;
}
.midBox-footer{
  height: 190rpx;
  background: #fff;
  align-items: center;

}
.midBox-footer navigator,.midBox-footer view{
  width: 210rpx;
  height: 120rpx;
  margin-right: 40rpx;
}
.midBox-footer view:last-child{
  margin-right: 0;
}
.midBox-footer navigator image,.midBox-footer view image{
  width: 100%;
  height: 100%;
}
